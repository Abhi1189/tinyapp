<!doctype html>
<html>
    <head>
        <title>TinyApp!</title>
    </head>

    <body>
        
        <header>
            <% include ./partials/_header %>
        </header>
        <ul>
        
        <% for(let key in urls) { %>
            <% if(urls[key].userID === cookie) { %>
                
                <li><a href="<%= urls[key].longURL %>"> <%= key %></a> - <%= urls[key].longURL %></li> 
                <form method="POST" action="/urls/<%= key %>/delete">
                    <button type="submit"> DELETE &#128465</button>
                <a href="/urls/<%= key %>">Edit</a>
                </form>
            <% } else { %>
                <!-- Short Urls -->
                <li><a href="<%= urls[key].longURL %>"><%= key %></a></li>
            <% } %>
        <% } %>
        </ul>
        <li><a href="/urls/new">Shorten the URL here..</a></li>
    
    </body>
</html>